{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "files": {
        "ignore": ["node_modules/**", "dist/**", "public/**", "apps/ml/**"]
    },
    "vcs": {
        "clientKind": "git",
        "enabled": true,
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true
    },
    "json": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "indentWidth": 4,
            "lineWidth": 100
        },
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": false
        }
    },
    "javascript": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space",
            "jsxQuoteStyle": "single",
            "semicolons": "asNeeded",
            "indentWidth": 4,
            "lineWidth": 100,
            "trailingCommas": "none"
        }
    }
}
